<div class="jumbotron jumbotron-fluid bg-dark" style="margin-top: 57px; margin-bottom: 0">
	<div class="container text-center">
		<h1 id="main-title" class="title color-primary">Open Sourcery</h1>
		<p class="lead my-3 color-primary">Open Source Focused Web Development Club at the University of Maryland</p>
		<hr class="my-4"/>
		<a href="#join" class="btn btn-primary btn-lg color-dark">Join Us</a>
		<%= link_to 'Sponsorship', sponsors_path, { class: 'btn color-primary hover-light btn-lg' } %>
	</div>
</div>
<%# "About Us" Section %>
<section class="about bg-light color-dark">
	<div id="section-about-us" class="container">
		<div class="row">
			<div class="col-12">
				<h1 class="title display-4">About Us</h1>
				<hr class="my-4" />
				<h3 class="subtitle text-center">Who Are We</h3>
				<p class="">
					Open Sourcery is a student-run club at the University of Maryland focused
					on promoting open-source software by developing interesting, fun, and 
					useful systems. We are focused on web-based systems, but we work on anything
					from machine learning to robotics.
				</p>
				<h3 class="subtitle text-center">What We Do</h3>
				<div class="container-fluid">
					<div class="row">
						<div class="col-sm-4 col-xsm-12">
							<h4 class="title">Workshops</h4>
							<hr />
							<p class="">
								Members lead educational workshops on topics they
								are knowledgeable and passionate about. About half
								of our regular meetings are workshops.
							</p>
						</div>
						<div class="col-sm-4 col-xsm-12">
							<h4 class="title">Projects</h4>
							<hr />
							<p class="">
								We support and encourage members to lead or join
								club projects by providing them with needed resources
								and community support.
							</p>
						</div>
						<div class="col-sm-4 col-xsm-12">
							<h4 class="title">Code Days</h4>
							<hr />
							<p class="">
								As a way to give back to the community, we host
								hackathons and code sprints that are free and
								open to the public.
							</p>
						</div>
					</div>
				</div>
				<p class=""></p>
			</div>
		</div>
	</div>
</section>
<%# Projects Section %>
<section class="projects bg-dark color-primary">
	<div class="container text-center">
		<h1 class="title display-4">Projects</h1>
		<p class="lead my-3">Check out some of the cool things we've done</p>
		<div class="row color-dark">
			<% [1, 2, 3, 4].each do |e| %>
				<div id="project-card-<%= e %>" class="col-md-3 col-sm-6 col-xsm-12">
					<%= render 'shared/project-card' %>
				</div>
			<% end %>
		</div>
		<%= link_to 'Projects', projects_path, { class: 'btn btn-primary btn-lg color-dark my-3'} %>
		<a class="btn color-primary hover-light btn-lg my-3" href="https://github.com/OpenSourceryClub" target="_blank"><span class="fab fa-github"></span> GitHub</a>
	</div>
</section>

<%# "Sponsors" Section %>
<section class="sponsors bg-light color-dark">
<div id="section-about-us" class="container">
	<div class="row">
		<div class="col-12 text-center">
			<h1 class="title">Our Sponsors</h1>
			<p class="lead font-weight-normal">
				Our generous sponsors enable us to create amazing things and
				spread the love of web development. We would not be able to do
				what we do without them. 
			</p>
			<%= link_to 'Become a Sponsor', sponsors_path, { class: "btn btn-primary btn-lg my-3" } %>
		</div>
	</div>
</div>
</section>